	for i in $(PUBLIC_INCLUDES) xxxx ; do \
		if test ! "$$i" = "xxxx" ; then \
			echo "    ---- Removing $$i from $(INC_DIR)/carmen" ; \
			$(RM) -f $(INC_DIR)/carmen/$$i ; \
		fi ; \
	done 

